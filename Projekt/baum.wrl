#VRML V2.0 utf8

PROTO Baum [
]{
    Transform {
        children [
            DEF Stamm Transform {
                children [
                    Shape {
                        geometry Cylinder {
                            bottom FALSE
                            top FALSE
                            height 20
                            radius 1
                            side TRUE
                        }
                        appearance Appearance {
                            textureTransform TextureTransform {
                                scale 5 10
                            }
                            texture ImageTexture {
                                url "texture/bark-1024-colcor.png"
                                repeatS TRUE
                                repeatT TRUE
                            }
                            material Material {
                                diffuseColor .59 .29 0.1 # Brown (damit noch reflektiert wird)
                            }
                        }
                    }
                ]}
            DEF Blaetter Transform {
                translation 0 7 0
                children [
                    Shape {
                        geometry Cone {
                            bottom TRUE
                            bottomRadius 4
                            height 15
                            side TRUE
                        }
                        appearance Appearance {
                            material Material {
                                diffuseColor .1 .3 .1 # Dark green TODO: Change to texture
                            }
                        }
                    }
                ]}
        ]
    }
}
